<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E7F39"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView
        android:id="@+id/today_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/today_body"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="TITLE"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/today_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:text="BODY"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/today_write_text"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:gravity="top"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/today_write_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:elegantTextHeight="false"
        android:onClick="onClickWite"
        android:src="@drawable/daily_send_button" />


</RelativeLayout>

