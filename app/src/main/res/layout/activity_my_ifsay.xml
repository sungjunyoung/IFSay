<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.flamerestaurant.ifsay.MyIfsayActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:background="#45bf55"
        android:id="@+id/frameLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금까지 모은 잎새의 개수"
            android:textColor="#e7e5e5"
            android:textSize="6pt"
            android:layout_marginTop="20px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/my_ifsay_introduction" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/white_ifsay_count"
            android:text="130"
            android:textColor="#FFFFFF"
            android:textSize="14pt"
            android:layout_below="@id/my_ifsay_introduction"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:src="@drawable/white_logo"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_below="@id/my_ifsay_introduction"
            android:layout_toLeftOf="@id/white_ifsay_count" />

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9b9b9b"
                android:textSize="20px"
                android:text="어제 당신에게 일어난 가장 즐거웠던 일은?"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#45bf55"
                android:gravity="center"
                android:textSize="40px"
                android:text="불닭볶음면을 먹고도 속이 아프지 않았어요!!"
                android:clickable="false" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="20dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/green_logo"
                    android:id="@+id/ifsay_logo"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ifsay_logo"
                    android:textColor="#4f534f"
                    android:text="+99"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/comments_green"
                    android:id="@+id/ifsay_comment"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ifsay_comment"
                    android:textColor="#4f534f"
                    android:text="+99"/>
            </LinearLayout>
            <ImageView
                android:layout_marginTop="4dp"
                android:background="#e4e6e4"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9b9b9b"
                android:textSize="20px"
                android:text="어제 당신에게 일어난 가장 즐거웠던 일은?"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#45bf55"
                android:gravity="center"
                android:textSize="40px"
                android:text="불닭볶음면을 먹고도 속이 아프지 않았어요!!"
                android:clickable="false" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="20dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/green_logo"
                    android:id="@+id/ifsay_logo_2"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ifsay_logo_2"
                    android:textColor="#4f534f"
                    android:text="+99"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/comments_green"
                    android:id="@+id/ifsay_comment_2"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ifsay_comment_2"
                    android:textColor="#4f534f"
                    android:text="+99"/>
            </LinearLayout>
            <ImageView
                android:layout_marginTop="4dp"
                android:background="#e4e6e4"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9b9b9b"
                android:textSize="20px"
                android:text="어제 당신에게 일어난 가장 즐거웠던 일은?"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#45bf55"
                android:gravity="center"
                android:textSize="40px"
                android:text="불닭볶음면을 먹고도 속이 아프지 않았어요!!"
                android:clickable="false" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="20dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/green_logo"
                    android:id="@+id/ifsay_logo_3"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ifsay_logo_3"
                    android:textColor="#4f534f"
                    android:text="+99"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/comments_green"
                    android:id="@+id/ifsay_comment_3"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ifsay_comment_3"
                    android:textColor="#4f534f"
                    android:text="+99"/>
            </LinearLayout>
            <ImageView
                android:layout_marginTop="4dp"
                android:background="#e4e6e4"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
