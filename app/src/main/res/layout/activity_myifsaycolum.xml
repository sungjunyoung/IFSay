<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="#11000000"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/question_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어제 당신에게 일어난 가장 즐거웠던 일은?"
        android:textColor="#9b9b9b"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/ifsay_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:text="불닭볶음면을 먹고도 속이 아프지 않았어요!!"
        android:textColor="#45bf55"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ifsay_logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/green_logo" />

        <TextView
            android:id="@+id/like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ifsay_logo"
            android:text="+99"
            android:textColor="#4f534f" />

        <ImageView
            android:id="@+id/ifsay_comment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/comments_green" />

        <TextView
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ifsay_comment"
            android:text="+99"
            android:textColor="#4f534f" />
    </LinearLayout>
</LinearLayout>