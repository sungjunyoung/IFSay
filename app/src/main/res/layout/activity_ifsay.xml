<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E7F39"
    android:orientation="vertical"
    android:paddingTop="15dp"
    tools:context="com.flamerestaurant.ifsay.IfsayActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/main_go_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/white_tree"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="40sp" />
    </RelativeLayout>

    <View
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="5월 22일의 질문"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:text="어린 시절에서 단 하나만 바꿀 수 있다면, 무엇을 바꾸겠어요?"
        android:textColor="#fff"
        android:textSize="25dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/ifsay_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

</LinearLayout>
